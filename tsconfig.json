{
    "compilerOptions": {
      "outDir": "./",
      "target": "esnext",
      "allowJs": true,
      "noEmit": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "jsx": "react",
      "sourceMap": true,
      "pretty": true,
      "baseUrl": ".",
      "paths": {
        "@/*": [
          "./src/*"
        ]
      },
    },
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "**/*.spec.ts"
    ],
  }